<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@color/white" 
   
    >

     <ScrollView 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView1" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="60dp"
         android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center_vertical"
       android:orientation="vertical"
       tools:ignore="UselessParent" >

    <ImageView
        android:layout_width="250dp"
        android:layout_height="105dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/todo"
        android:onClick="onsubclick"
        android:clickable="true"
        android:src="@drawable/gpan"
         />
    
    <ImageView
        android:layout_width="250dp"
        android:layout_height="105dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/todo"
        android:onClick="onqpclick"
        android:clickable="true"
        android:src="@drawable/qpn"
         />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="105dp"
        android:layout_gravity="center_horizontal"
       
        android:onClick="onnotclick"
        android:clickable="true"
        android:src="@drawable/notesn" android:contentDescription="@string/todo"/>
    
    <ImageView
        android:layout_width="250dp"
        android:layout_height="105dp"
        android:layout_gravity="center_horizontal"
       
        android:onClick="onsylclick"
        android:clickable="true"
        android:src="@drawable/syln" android:contentDescription="@string/todo"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="105dp"
        android:layout_gravity="center_horizontal"
      android:layout_marginBottom="50dp"
        android:clickable="true"
        android:onClick="onabclick"
        android:src="@drawable/about" android:contentDescription="TODO"/>
    
     
    
     
</LinearLayout>

   
   
</RelativeLayout>
  </ScrollView> 

    <TextView
		    android:id="@+id/textView1"
		    android:layout_width="fill_parent"
		    android:layout_height="50dp"
		    android:layout_gravity="top"
		    android:gravity="center_horizontal"
		    android:background="@color/ibg"
		    android:fontFamily="sans-serif-condensed"
		    
		   
		    android:paddingTop="15dp"
		    android:text="@string/index"
		    android:textColor="@color/white"
		    android:textSize="20sp"
		    tools:ignore="UnusedAttribute,RtlSymmetry" />
      

</FrameLayout>